{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noEmit": true,
      "types": ["jest", "node"],
      "isolatedModules": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.test.ts",
      "**/*.test.tsx",
      "jest.setup.js"
    ],
    "exclude": [
      "node_modules",
      ".next",
      "out"
    ]
  }
  